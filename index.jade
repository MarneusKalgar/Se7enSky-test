doctype
html( lang="ru", class="window" )
	head
		title Se7enSky-test
		meta( charset='utf-8' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		meta( name='viewport', content='width=device-width, initial-scale=1.0' )
		meta( name='description', content='A simple fragment of e-shop' )
		meta( name='author', content='Igor Chernobay' )
		link( rel='shortcut icon', type='image/png', href='img/favicon.png' )
		link( href='css/main.css', rel='stylesheet' )
		<!--[if lt IE 9]>
		script( src="js/html5shiv/dist/html5shiv.min.js" )
		<![endif]-->
	body.wrapper
		//block page-header
		header.page-header
			h1.page-header__title A simple fragment of the e-shop
		//end block page-header

		//block product-container
		section.products-container.cf

			//- This mixin generates the product-item blocks
			mixin productItem( name, items )
				//block product-item
				a.product-item( href="#" )
					.product-item__description
						p.product-item__title= name
						p.product-item__price= items
				//end block product-item

			//- mixin initialization
			+productItem( 'Рюкзак "Ready for School"', '241.50' )

			+productItem( 'Рюкзак "Птичье царство"', '241.50' )

			+productItem( 'Рюкзак "Мадонна"', '241.50' )

			+productItem( 'Рюкзак "Violet Green"', '241.50' )

			+productItem( 'Рюкзак "Ripndip Wilderness"', '241.50' )

			+productItem( 'Рюкзак "Of the Wall"', '241.50' )

			+productItem( 'Просто красный рюкзак', '241.50' )
		
		//end block product-container

		//block page-footer
		footer.page-footer
			p.page-footer__info &copy; 2016 Se7enSky




