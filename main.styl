@import 'nib'

/******************************************/
/*								Web Fonts
/******************************************/
@font-face 
	font-family 'robotoregular'
	src url('../fonts/roboto-regular-webfont.eot')
	src url('../fonts/roboto-regular-webfont.eot?#iefix') format('embedded-opentype'),
			url('../fonts/roboto-regular-webfont.woff2') format('woff2'),
			url('../fonts/roboto-regular-webfont.woff') format('woff'),
			url('../fonts/roboto-regular-webfont.ttf') format('truetype'),
			url('../fonts/roboto-regular-webfont.svg#robotoregular') format('svg')
	font-weight normal
	font-style normal
	
@font-face 
	font-family 'pfAgoraSansProblack'
	src url('../fonts/pfagorasanspro-black-webfont.eot')
	src url('../fonts/pfagorasanspro-black-webfont.eot?#iefix') format('embedded-opentype'),
			url('../fonts/pfagorasanspro-black-webfont.woff2') format('woff2'),
			url('../fonts/pfagorasanspro-black-webfont.woff') format('woff'),
			url('../fonts/pfagorasanspro-black-webfont.ttf') format('truetype'),
			url('../fonts/pfagorasanspro-black-webfont.svg#pf_agora_sans_problack') format('svg')
	font-weight bold
	font-style normal

/******************************************/
/*								Layout
/******************************************/
.window
	height 100%
	font-size 1rem/1.2
	color #2757b0
	background #fff url('../img/page-bg.png') repeat left top
  
.wrapper
	width 82%
	max-width 120rem
	min-width: 20rem
	margin 0 auto
	padding-left 1.25rem

/******************************************/
/*						page-header styles
/******************************************/
.page-header
	margin 0
	padding 0
	&__title
		margin 1rem
		font bold 2.0rem 'robotoregular', Helvetica, sans-serif
		color #202121
		letter-spacing .05rem
		text-align center
	
/******************************************/
/*					product-container styles
/******************************************/
.products-container
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	align-items center
	align-content center
	margin 0
	
/******************************************/
/*			block product-item styles
/******************************************/

//variables
$bdRad = 10px//for border-radius

.product-item
	display block
	position relative
	float left
	width 14.0625rem
	height 21.5625rem
	margin 1.9375rem 1.25rem 0 0
	padding 0
	text-decoration none
	background-color #fff
	background-position 0 0
	background-repeat no-repeat
	background-size contain
	border-radius $bdRad
	&:hover
	&:active
	&:focus
		box-shadow 0 0 .5em .3em #ed7474
		outline none
	/*Adding box-shadow*/
	&::before
	&::after
		content ""
		position absolute
		z-index -10
		box-shadow 0 0 12px rgba(58,58,58,0.7)
		top 50%
		bottom 0
		left 10px
		right 10px
		border-radius 70px / 12px
	&::after	
		left auto
		transform skew(8deg) rotate(3deg)
		
	&__description
		position relative
		box-sizing border-box
		margin 14.0625rem 0 0 0
		height 35.36232%
		border-bottom-right-radius $bdRad
		border-bottom-left-radius $bdRad
		background-color #f2f5f8
		
	&__title
		width 66.6666%
		height 4.0rem
		overflow hidden
		padding-top 7.5%
		margin 0 16.666% 
		font .875rem 'robotoregular', Helvetica, sans-serif
		text-align center
		letter-spacing .03rem
		color #2757b0
		word-wrap break-word
		
	&__price
		position absolute
		margin 0
		width 66.6666%
		height 1.5rem
		top 73%
		left 18%
		font 1.0rem'pfAgoraSansProblack', Helvetica, sans-serif
		color #000
		text-align center
		overflow hidden
		&:after
			content ' грн'
			font-size .8rem
			font-weight bold

.product-item:hover 
	.product-item__description
		color #e01f1f

// Mixin adds background-images to block product-item
backgroundImage( num, imgLock )
	.product-item:nth-child({num})
		background-image imgLock

/* Mixin initialization */
backgroundImage( 1, url('../img/backpack-ready-for-school.png') )

backgroundImage( 2, url('../img/backpack-world-of-birds.png') )

backgroundImage( 3, url('../img/backpack-madonna.png') )

backgroundImage( 4, url('../img/backpack-violet-green.png') )

backgroundImage( 5, url('../img/backpack-ripndip-wilderness.png') )

backgroundImage( 6, url('../img/backpack-of-the-wall.png') )

backgroundImage( 7, url('../img/backpack-simple-red.png') )

/******************************************/
/*					page-footer styles
/******************************************/
.page-footer__info
	margin-top 2%
	font bold .8rem 'robotoregular', Helvetica, sans-serif
	text-align center
	color #202121

/******************************************/	
/*      clearfix for older browsers
/******************************************/
.cf:before,
.cf:after 
	content " " /* 1 */
	display table /* 2 */
.cf:after 
	clear both
/* For IE 6/7 only Include this rule to trigger hasLayout and contain floats. */
.cf 
	*zoom 1